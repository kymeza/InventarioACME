<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventario</title>
</head>

<body>
    <h1>Inventario</h1>

    <nav>
        <ul>
            <li><a href="/">Inicio</a></li>
            <li>
                Inventario
                <ul>
                    <li><a href="/inventario">Ver Items</a></li>
                    <li><a href="/inventario/create">Crear Item</a></li>
                    <li><a href="/inventario/update">Actualizar Item</a></li>
                    <li><a href="/inventario/delete">Borrar Item</a></li>
                </ul>
            </li>
        </ul>
    </nav>

    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Descripcion</th>
                <th>Cantidad</th>
            </tr>
        </thead>
        <tbody>
            <% objetos.forEach(objeto => { %>
                <tr>
                    <td><%- objeto.id_objeto %></td>
                    <td><%- objeto.desc_item %></td>
                    <td><%- objeto.cantidad %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>

</html>
